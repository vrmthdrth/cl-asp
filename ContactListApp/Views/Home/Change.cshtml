@model ContactListApp.Models.Contact

@{
    ViewBag.Title = "Изменение данных контакта";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div>
    <h4>Редактирование</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ContactId)

    <div>
        @Html.LabelFor(model => model.Surname, "Фамилия")
        <div>
            @Html.EditorFor(model => model.Surname)
            <br />
            @Html.ValidationMessageFor(model => model.Surname)
        </div>
    </div>

    <br />

    <div>
        @Html.LabelFor(model => model.Name, "Имя")
        <div>
            @Html.EditorFor(model => model.Name)
            <br />
            @Html.ValidationMessageFor(model => model.Name)
        </div>
    </div>

    <br />

    <div>
        @Html.LabelFor(model => model.Patronymic, "Отчество")
        <div>
            @Html.EditorFor(model => model.Patronymic)
            <br />
            @Html.ValidationMessageFor(model => model.Patronymic)
        </div>
    </div>

    <br />

    <div>
        @Html.LabelFor(model => model.BirthDate, "Дата рождения")
        <div>
            @Html.EditorFor(model => model.BirthDate)
            <br />
            @Html.ValidationMessageFor(model => model.BirthDate)
        </div>
    </div>

    <br />

    <div>
        @Html.LabelFor(model => model.Organization, "Организация")
        <div>
            @Html.EditorFor(model => model.Organization)
            <br />
            @Html.ValidationMessageFor(model => model.Organization)
        </div>
    </div>

    <br />

    <div>
        @Html.LabelFor(model => model.Position, "Должность")
        <div>
            @Html.EditorFor(model => model.Position)
            <br />
            @Html.ValidationMessageFor(model => model.Position)
        </div>
    </div>

    <br />

    <div>
        @Html.LabelFor(model => model.ContactInfo.Phone, "Телефон")
        <br />
        @Html.EditorFor(model => model.ContactInfo.Phone)
        <br />
        @Html.ValidationMessageFor(model => model.ContactInfo.Phone)
    </div>

    <br />

    <div>
        @Html.LabelFor(model => model.ContactInfo.Email, "Имэйл")
        <br />
        @Html.EditorFor(model => model.ContactInfo.Email)
        <br />
        @Html.ValidationMessageFor(model => model.ContactInfo.Email)
    </div>

    <br />

    <div>
        @Html.LabelFor(model => model.ContactInfo.Skype, "Скайп")
        <br />
        @Html.EditorFor(model => model.ContactInfo.Skype)
        <br />
        @Html.ValidationMessageFor(model => model.ContactInfo.Skype)
    </div>

    <br />

    <div>
        @Html.LabelFor(model => model.ContactInfo.Other, "Другое")
        <br />
        @Html.EditorFor(model => model.ContactInfo.Other)
        <br />
        @Html.ValidationMessageFor(model => model.ContactInfo.Other)
    </div>

    <br />

    <div>
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</div>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
